<h1>EXPRESS TODO LISTS</h1>
{{#if messages}}
    {{#each messages}}
        <div class="alert alert-success">{{this}}</div>
        {{/each}}
{{/if}}
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{this}}</div>
    {{/each}}
{{/if}}
<ul class="list-group">
    {{#each lists}}
    <li class="list-group-item d-flex justify-content-between align-items-center row">
        <div class="col-md-9">
            <a href="/lists/{{this.id}}/todos">
                {{this.name}}
            </a>
            <span class="badge badge-danger badge-pill "> {{this.total}}</span>
        </div>
        <div class="col-md-3">
            <a href="/lists/{{this.id}}/edit" class="btn btn-success" title="UPDATE LIST">
                UPDATE
            </a>
            <form method="post" name="form{{this.id}}" action="/lists/{{this.id}}" style="display: inline">
            {{!-- per poter usare il pacchetto method-override --}}
                <input type="hidden" name="_method" value="DELETE">
                <button type="button"
                    onclick="showConfirmMsg('delete list','Are you sure you want to delete this item?','form{{this.id}}')"
                    class="btn btn-danger" title="DELETE LIST">
                    DELETE
                    </button>
            </form>
        </div>
    </li>
    {{/each}}
</ul>

