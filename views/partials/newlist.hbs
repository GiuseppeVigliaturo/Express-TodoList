<script>
    function updateList(btn) {
        const method = document.getElementById('method');
        const form = document.getElementById('list');
        btn.value === 'DELETE' ? method.value = 'DELETE' : method.value = 'PATCH';
        form.submit();
    }
</script>

<h2>INSERT NEW LIST</h2>

{{#if errors}}
{{#each errors}}
<div class="alert alert-danger">{{this}}</div>
{{/each}}
{{/if}}
<form method="post" action="/lists" name="list" id="list">
    <div class="row">
        <div class="col-md-9 form-group">
            <input class="form-control" name="list_name" value="{{name}}">
        </div>
        <div class="col-md-3">
            <button value="SAVE" class="btn btn-success" title="INSERT LIST">
                SAVE
            </button>


            <a href="/" class="btn btn-danger" title="BACK TO LIST LIST">
                BACK
            </a>

        </div>
    </div>
</form>